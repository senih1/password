@model List<User>
@if (TempData["Message"] != null)
{
    <div class="alert @TempData["MessageCss"] mb-5" role="alert">
        @TempData["Message"]
    </div>
}
<h2>Kullanıcı Listesi</h2>
<ul class="user-list">
    @foreach (var user in Model)
    {
        <li class="user-item">
            <div class="user-info">
                <span class="user-name">Ad: @user.FullName</span>
                <span class="user-name">Ad: @user.Username</span>
                <span class="user-password">Şifre: <span class="password-value">@user.Password</span></span>
            </div>
            <a href="/admin/deleteUser/@user.Id" class="delete-link">Kullanıcıyı Sil</a>
        </li>
    }
</ul>